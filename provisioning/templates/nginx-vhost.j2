server {
    listen 80;

    server_name {{ nginx_vhost_server_name }};
    root {{ nginx_vhost_webroot }};

    access_log /var/log/nginx/{{ nginx_vhost_name }}.access_log;
    error_log /var/log/nginx/{{ nginx_vhost_name }}.error_log;

    # strip app.php/ prefix if it is present
    rewrite ^/app\.php/?(.*)$ /$1 permanent;

    location / {
        index app.php;
        try_files $uri @rewriteapp;
    }

    location @rewriteapp {
        rewrite ^(.*)$ /app.php/$1 last;
    }

    # pass the PHP scripts to FastCGI server from upstream phpfcgi
    location ~ ^/(app|app_dev|config)\.php(/|$) {
        fastcgi_pass {{ nginx_vhost_phpfcgi_address }};
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param  HTTPS off;
    }
}
